<div class="mt-8 mx-5 bg-zinc-300 rounded-xl drop-shadow-xl" id="mahasiswa">
    <div class="py-4 px-5 bg-gradient-to-r from-blue-600 to-zinc-900 rounded-xl">
        <p class="text-white text-3xl font-bold drop-shadow-lg tracking-widest">Forum Fakultas</p>
    </div>
    <div class="grid grid-cols-3 place-items-center lg:grid-cols-4 gap-4 p-8">
        <% data.data.fakultas.map((r)=> { %>
        <div class="flex flex-col items-center justify-center w-full max-w-sm mx-auto hover:scale-110 transform transition duration-500"
            onclick="location.href='<%= r.url %>'">
            <div class="w-full h-64 bg-gray-300 bg-center bg-cover rounded-xl shadow-md"
                style="background-image: url(<%= r.thumbnail || 'https://assets.ayobandung.com/crop/0x0:0x0/750x500/webp/photo/2022/07/20/3684434291.jpg'%>)">
            </div>

            <div class="w-64 -mt-8 overflow-hidden bg-blue-600 rounded-xl shadow-lg">
                <h3 class="p-2 font-semi-bold text-center text-white text-3xl">
                    <%= r.nama %>
                </h3>
                <div class="px-3 py-2 text-center bg-white">
                    <span class="text-xl font-semi-bold text-gray-800"><%= r.detail %></span>
                </div>
            </div>
        </div>
        <% }) %>
    </div>
</div>